{
  "name": "node-utils",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm clean && tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:build": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "pnpm lint:eslint && pnpm typecheck",
    "lint:eslint": "eslint .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.14"
  },
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./db": {
      "types": "./src/dbUtils/KVSqlite.ts",
      "import": "./src/dbUtils/KVSqlite.ts",
      "default": "./src/dbUtils/KVSqlite.ts"
    },
    "./ai": {
      "types": "./src/AI/GeminiHelper.ts",
      "import": "./src/AI/GeminiHelper.ts",
      "default": "./src/AI/GeminiHelper.ts"
    },
    "./memory": {
      "types": "./src/dbUtils/MemoryCache.ts",
      "import": "./src/dbUtils/MemoryCache.ts",
      "default": "./src/dbUtils/MemoryCache.ts"
    }
  },
  "files": [
    "src"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.27"
  }
}
